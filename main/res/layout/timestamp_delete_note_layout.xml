<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/timeStamp_delete_btn_linearLayout"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="200dp">
    <com.NoaoN.voiceRecorderWithNotes.components.TimeStamp
        android:id="@+id/timeStampTimeTVInList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="12sp"
        android:focusable="true"
        android:onClick="onClickTextViewTimeStamp"
        style="@style/delNoteBtn"
        />
    <com.NoaoN.voiceRecorderWithNotes.components.DeleteButton
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteNoteBTN"
        android:text="delete"
        android:onClick="onClickDeleteNote"
        android:layout_marginStart="70dp"
        style="@style/delNoteBtn"
        android:focusable="true"
        />
</LinearLayout>